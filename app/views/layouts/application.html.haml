!!!
%html
	%head
		%title
			Stackoverflow
		= stylesheet_link_tag "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags

	%body
		%strong 
		%hr
		%strong
			- if user_signed_in? 
				= current_user.email
				= link_to "Sign out", destroy_user_session_path, :method => :delete
			- else 
				= link_to 'Sign in', new_user_session_path
		%hr		
						
		= yield