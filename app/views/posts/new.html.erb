<div class="new-question-form" id="new-question-form">

<legend>Create new question :</legend>

	<%= form_for :post, :url => { :action => :create } do |f| %>
	  <p>
	    <%= f.label :title %><br>
	    <%= f.text_field :title %>
	  </p>
	  <p>
	    <%= f.label :body %><br>
	    <%= f.text_area :body %>
	  </p>
	  <p>
	    <%= f.submit %>
	  </p>
	<% end %>

	<%= link_to 'Back', '/' %>
 
</div>