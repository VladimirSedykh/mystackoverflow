			= link_to 'my questions', posts_path(:tab => "my"), :id => "tab-my"
		= link_to 'frequent', posts_path(:tab => "fre"), :id => "tab-fre"
		= link_to 'today', posts_path(:tab => "today"), :id => "tab-today"
		= link_to 'week', posts_path(:tab => "week"), :id => "tab-week"
		= link_to 'month', posts_path(:tab => "month"), :id => "tab-month"

#questions
	= render @posts		
	
