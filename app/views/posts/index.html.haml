	%li 
		%a 
			= link_to 'Main', root_path
			%span{ :class => "divider"} 
				|

.subheader
	%h1
		All Questions
	#tabs	
		= link_to 'all questions', posts_path(:tab => "all"), :class => "youarehere", :id => "tab-all"
