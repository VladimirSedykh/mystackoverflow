%ul{ :class => "breadcrumb" }
	%li 
		%a 
			= link_to 'Main', root_path
			%span{ :class => "divider"} 
				|
	%li 
		%a 
			= link_to 'Tags', tags_path
			%span{ :class => "divider"} 
				|
	%li			
		%a 
			New
			%span{ :class => "divider"}  

.div{ :class => "new-question-form", :id => "new-question-form" }
	%legend
		Create new tag :</legend>
		= form_for :tag, :url => { :action => :create } do |f|
			%p
				= f.label :name
				%br
				= f.text_field :name
			%p
				= f.label :about
				%br
				= f.text_area :about	
			%p
				= f.submit

		= link_to 'Back to tag list', tags_path, :class => 'btn btn-primary'		
	