.div{ :class => "new-question-form", :id => "new-question-form" }
	%legend
		Create new tag :</legend>
		= form_for :tag, :url => { :action => :create } do |f|
			%p
				= f.label :name
				%br
				= f.text_field :name
			%p
				= f.label :about
				%br
				= f.text_area :about	
			%p
				= f.submit
		= link_to 'Back', root_path, :class => 'btn'	